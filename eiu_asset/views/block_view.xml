<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Create module for module in odoo-->
    <record id="block_action" model="ir.actions.act_window">
        <field name="name">Blocks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.block</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first Block!
            </p>
        </field>
    </record> 

    <!-- List data -->
    <record id="view_block_tree" model="ir.ui.view">
        <field name="name">view_block_tree</field>
        <field name="model">asset.block</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="note"/>
                <field name="state"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>


    <!-- Form Crete and Edit -->
    <record id="view_block_form" model="ir.ui.view">
        <field name="name">view_block_form</field>
        <field name="model">asset.block</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="responsible_id"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <notebook>
                        <page  string="Danh sách phòng">
                            <field name="rooms_ids">
                                <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="note"/>
                                        <field name="state"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="note"/>
                                        <field name="state"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>  

    <record id="block_search" model="ir.ui.view">
        <field name="name">block_search</field>
        <field name="model">asset.block</field>
        <field name="arch" type="xml">
            <search>
                <field name="responsible_id"/>
                <group expand="1" string="Group By">
                    <filter string="Responsible" name="responsible" context="{'group_by':'responsible_id'}"/>
                </group>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Lock" name="lock" domain="[('state', '=', 'lock')]"/>
            </search>
        </field>
    </record>  
   

   

    <menuitem
        id="asset_block"
        name="Block"
        parent="menu_manager_root"
        sequence="10"/>

    <menuitem
        id="manager_bloc"
        name="Danh sách block"
        parent="asset_block"
        action="block_action"
        sequence="10"/>
</odoo>
